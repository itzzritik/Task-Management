{
    "css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"stylelint.validate": ["css", "scss"],
    "files.eol": "\n",
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,

	"gitmoji.showEmojiCode": true,
	"gitmoji.addCustomEmoji": [
		{
			"emoji": "🛰️",
			"code": ":satellite:",
			"description": "HTTP Requests related updates"
		},
		{
			"emoji": "🛡️",
			"code": ":shield:",
			"description": "Typescript (TS) related updates"
		}
	],

    "cSpell.words": [
		"wdth",
		"wght"
	]
}
